    <Window x:Class="_312840Epidemiology.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312840Epidemiology"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label>Target Infected Population</Label>
        <TextBox x:Name="txtTarget" />
        <Label>Number of people infected (Day 0)</Label>
        <TextBox x:Name="txtInfected" />
        <Label>People newly infected (per person, per day)</Label>
        <TextBox x:Name="txtSpread" />
        <Button x:Name="btnProcess" Click="btnProcess_Click">How long will it take to reach target infected population?</Button>
        <Label x:Name="lblOutput" />
    </StackPanel>
</Window>
